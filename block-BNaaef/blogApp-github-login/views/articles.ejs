<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="stylesheet/style.css" />
    <title>Blogs</title>
  </head>
  <body>
    <header>
      <div class="container flex space-between">
        <a href="/">Home</a>
        <nav>
          <ul class="flex space-between navbar">
            <li>
              <a href="/article">Articles</a>
            </li>
            <%if(user){%>
            <li><a href="#"> <%= user.fullName()%></a></li>
            <li>
              <a href="/article/new">Add Article</a>
            </li>
            <li>
              <a href="/users/logout">Logout</a>
            </li>
            <%}else{%>
            <li>
              <a href="/users/signup">Sign Up</a>
            </li>
            <li>
              <a href="/users/login">Login</a>
            </li>
            <% }%>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <% if(user){%>
      <div class="users">Welcome <%= user.fullName()%></div>
      <%}%>
      <ul>
        <% articles.forEach((article)=>{ %>
        <li>
          <h3><%= article.title%></h3>
          <p><%= article.description%></p>
          <p>Written by: <span><%= article.author%></span></p>
          <a href="/article/<%= article._id %>/detail">
            <button class="edit-btn">See more</button>
          </a>
        </li>
        <%})%>
      </ul>
    </div>
  </body>
</html>
